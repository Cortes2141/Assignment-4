<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @album.name %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @album.genre %>
</p>

<p>
  <strong>Year:</strong>
  <%= @album.year %>
</p>

<ul>
  <strong>Artist:</strong>
   <%= @album.artists.each do |artist| %>
    <li><%= artist.name %></li>
   <% end %>
</ul>

<p>
  <strong>Label:</strong>
  <%= @album.label.name %>
</p>

<p>
  <strong>Added:</strong>
  <%= @album.added %>
</p>

<p>
  <strong>Play:</strong>
  <%= @album.play %>
</p>

<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>
